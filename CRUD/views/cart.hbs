{{> headers}}
<div class="container mx-auto px-4 pt-24">
  <h2 class="text-3xl font-bold mb-6">ðŸ›’ Carrito <span class="bg-pink-600 text-white rounded-full text-base px-3 py-1 font-bold align-middle">{{cart.length}}</span></h2>

  {{#if cart.length}}
  <div class="space-y-4">

    <!-- productos-->

    {{#each cart}}
    <div id="{{this.id}}" class="card card-side bg-base-100 shadow-md">
      <figure>
        <img src="{{this.img}}" alt="{{this.titulo}}" class="w-24 h-24 object-cover rounded-l-xl">
      </figure>
      <div class="card-body flex flex-row items-center justify-between">

        <!-- contador-->

        <div>
          <h3 class="card-title">{{this.titulo}}</h3>
          <p class="text-sm text-gray-500">Cantidad: {{this.qty}}</p>
        </div>

        <!-- quitar productos-->

        <div class="flex gap-2">
          <button class="btn btn-error btn-sm remove-btn" data-id="{{this.id}}">Quitar</button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <!--estado de carrito-->

