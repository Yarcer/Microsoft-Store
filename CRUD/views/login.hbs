{{> headers}}
<div class="flex items-center justify-center min-h-screen bg-base-200">
  <div class="card w-full max-w-sm shadow-2xl bg-base-100">
    <div class="card-body">
      <h2 class="text-2xl font-bold text-center mb-4">Iniciar sesión</h2>
      
      {{#if error}}
        <div class="alert alert-error mb-4">
          <span>{{error}}</span>
        </div>
      {{/if}}
      
      <form action="/login" method="POST" class="space-y-4">
        <div>
          <label class="label">Usuario</label>
          <input type="text" name="username" value="{{username}}" placeholder="Tu usuario" 
                 class="input input-bordered w-full" required>
        </div>
        <div>
          <label class="label">Contraseña</label>
          <input type="password" name="password" placeholder="••••••••" 
                 class="input input-bordered w-full" required>
        </div>
        <div class="form-control mt-6">
          <button type="submit" class="btn btn-primary w-full">Ingresar</button>
        </div>
      </form>
      <p class="text-xs text-center mt-4 text-gray-400">
        ¿No tienes cuenta? <a href="/register" class="link link-primary">crea sesión</a>
        </p>
      <p class="text-xs text-center mt-4 text-gray-400">
        Demo: admin/admin123 | user/user123
      </p>
    </div>
  </div>
</div>
{{> footer}}
